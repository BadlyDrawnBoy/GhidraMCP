{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:schema:envelope.v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["ok", "data", "errors"],
  "properties": {
    "ok": {"type": "boolean"},
    "data": {
      "oneOf": [
        {"type": "object"},
        {"type": "null"}
      ]
    },
    "errors": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["code", "message"],
        "properties": {
          "code": {"type": "string"},
          "message": {"type": "string"},
          "details": {"oneOf": [{"type": "object"}, {"type": "null"}]}
        }
      }
    }
  }
}

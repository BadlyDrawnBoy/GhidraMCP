{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:schema:jt-slot-process.request.v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "jt_base",
    "slot_index",
    "code_min",
    "code_max"
  ],
  "properties": {
    "jt_base": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]+$"
    },
    "slot_index": {
      "type": "integer",
      "minimum": 0
    },
    "code_min": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]+$",
      "description": "Lower bound (inclusive) for valid code addresses."
    },
    "code_max": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]+$",
      "description": "Upper bound (exclusive) for valid code addresses."
    },
    "arch": {
      "type": "string",
      "minLength": 1
    },
    "rename_pattern": {
      "type": "string"
    },
    "comment": {
      "type": "string"
    },
    "dry_run": {
      "type": "boolean"
    }
  }
}
